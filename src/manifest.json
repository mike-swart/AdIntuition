{
  "name": "AdIntuition",
  "version": "1.1.0.1",
  "description": "Automatic sponsored content detection on YouTube",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "notifications", "storage", "*://*/?*"],
  "browser_action": {
    "default_icon": "logos/logo.png",
    "default_title": "Information about AdIntuition",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["video.js"],
      "css": ["common.css"],
      "run_at": "document_start"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "logos/logo.png",
    "48": "logos/logo.png",
    "128": "logos/logo128x128.png"
  },
  "manifest_version": 2
}
