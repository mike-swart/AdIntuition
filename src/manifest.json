{
  "name": "AdIntuition",
  "version": "1.0",
  "description": "Shows if a content creator on Youtube is making money off of the video based off of a paid partnership with a company",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "tabs", "webNavigation", "notifications", "storage", "*://*/"],
  "browser_action": {
    "default_icon": "logos/logo.png",
    "default_title": "Information about AdIntuition",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["video.js"],
      "css": ["common.css"],
      "run_at": "document_start"
    }
    // {
    //   "matches": ["*://www.youtube.com/results?*"],
    //   "js": ["search.js"],
    //   "css": ["common.css"],
    //   "run_at": "document_start"
    // }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "logos/logo.png",
    "48": "logos/logo.png",
    "128": "logos/logo.png"
  },
  "manifest_version": 2
}
