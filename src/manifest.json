{
  "name": "AdIntuition",
  "version": "1.0",
  "description": "Automatic sponsored content detection on YouTube",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["tabs", "webNavigation", "notifications", "storage", "*://www.youtube.com/*", "https://ovqz88jgqf.execute-api.us-west-2.amazonaws.com/default/SocialMediaEndorsements?url=*", "https://lj71toig7l.execute-api.us-west-2.amazonaws.com/default/AdIntuitionTracker?user=*"],
  "browser_action": {
    "default_icon": "logos/logo.png",
    "default_title": "Information about AdIntuition",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["video.js"],
      "css": ["common.css"],
      "run_at": "document_start"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "logos/logo.png",
    "48": "logos/logo.png",
    "128": "logos/logo.png"
  },
  "manifest_version": 2
}
